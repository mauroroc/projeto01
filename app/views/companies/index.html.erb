<div class="well text-center">
<!-- Bootstrap -->
  <br/><h2>Relação de Empresas</h2> <br/>     
  <div class="row">  
    <% @companies.each do |company| %>    
      <div class="col-lg-4">
        <%= link_to company, :class => "rounded" do %>
          <%if company.image.attached?%>
            <dd><%= image_tag(company.image, alt: company.name, :size => "200x200") %></dd>                    
          <%end%>          
           <dt><%= company.name %></dt>
        <% end %>        
      </div>
    <% end %>  
  </div> 
</div>

