<div class="well text-center">
  <h2>Relação de Empresas</h2>      
  <div class="row">  
    <% @companies.each do |company| %>    
      <div class="col-lg-4">
        <%= link_to company, :class => "rounded" do %>
          <dd><%= image_tag(company.logo, alt: company.name)%></dd>
          <dt><%= company.name %></dt>
        <% end %>
      </div>
    <% end %>  
  </div> 
</div>