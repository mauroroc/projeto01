 <%=form_with(model: @job) do |f| %>
    <dt><%= f.label :title, 'Titulo' %></dt>
    <dd><%= f.text_field :title %></dd>
    <dt><%= f.label :description, 'Descrição' %></dt>
    <dd><%= f.text_area :description %></dd>
    <dt><%= f.label :salary, 'Faixa Salarial' %></dt>
    <dd><%= f.select :salary, options_for_select([['Não Definido','NaoDefinido'],['Abaixo de R$ 5.000','Abaixo_de_5000'],['Entre R$ 5.000 e R$ 10.000', 'Entre_5000_e_10000'],['Acima de R$ 10.000', 'Acima_de_10000']]) %></dd>
    <dt><%= f.label :stage, 'Nível' %></dt>
    <dd><%= f.select :stage, options_for_select([['Júnior','Junior'],['Pleno','Pleno'],['Sênior', 'Senior']]) %></dd>
    <dt><%= f.label :need, 'Requisitos Obrigatórios' %></dt>
    <dd><%= f.text_area :need %></dd>
    <dt><%= f.label :expiration, 'Data Limite' %></dt>
    <dd><%= f.text_field :expiration %></dd>
    <dt><%= f.label :quantity, 'Total de Vagas' %></dt>
    <dd><%= f.text_field :quantity %></dd> 
    <% if @cadastro %>
        <%= f.hidden_field :company, value: current_employee.company.id %>       
    <% end %>
    <%= f.submit 'Salvar' %>        
<% end %>
