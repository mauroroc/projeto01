 <div class="container">
        <%=form_with(model: @job) do |f| %>
        <div class="row">    
            <div class="col-3 font-weight-bold"><%= f.label :title, 'Titulo', class: "control-label"  %></div>
            <div class="col-9"><%= f.text_field :title, class: "form-control" %></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-3 font-weight-bold"><%= f.label :description, 'Descrição', class: "control-label" %></div>
            <div class="col-9"><%= f.text_area :description, class: "form-control" %></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-3 font-weight-bold"><%= f.label :salary, 'Faixa Salarial', class: "control-label" %></div>
            <div class="col-3"><%= f.select :salary, options_for_select([['Não Definido','NaoDefinido'],['Abaixo de R$ 5.000','Abaixo_de_5000'],['Entre R$ 5.000 e R$ 10.000', 'Entre_5000_e_10000'],['Acima de R$ 10.000', 'Acima_de_10000']], f.object.salary), {}, class:'form-control' %></div>
            <div class="col-3 font-weight-bold"><%= f.label :stage, 'Nível', class: "control-label" %></div>
            <div class="col-3"><%= f.select :stage, options_for_select([['Júnior','Junior'],['Pleno','Pleno'],['Sênior', 'Senior']], f.object.stage), {}, class:'form-control' %></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-3 font-weight-bold"><%= f.label :need, 'Requisitos Obrigatórios', class: "control-label" %></div>
            <div class="col-9"><%= f.text_area :need, class: "form-control" %></div>            
        </div>
        <br/>
        <div class="row">
            <div class="col-3 font-weight-bold"><%= f.label :expiration, 'Data Limite', class: "control-label" %></div>
            <div class="col-3"><%= f.text_field :expiration, class: "form-control" %></div>
            <div class="col-3 font-weight-bold"><%= f.label :quantity, 'Total de Vagas', class: "control-label" %></div>
            <div class="col-3"><%= f.text_field :quantity, class: "form-control" %></div>
        </div>
        <br/>
        <% if @cadastro %>
            <%= f.hidden_field :company, value: current_employee.company.id %>       
        <% end %>        
        <div class="text-center">
            <p><%= f.submit 'Salvar', :class => "btn btn-success" %></p>                    
        </div>
        <% end %>            
    </div>