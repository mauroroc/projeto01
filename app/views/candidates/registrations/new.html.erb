<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "candidates/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar Senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
     <%= f.label :name, 'Nome Completo/Nome Social' %><br />
     <%= f.text_field :name, autofocus: true %>
  </div>

  <div>
     <%= f.label :cpf, 'CPF' %><br />
     <%= f.text_field :cpf, autofocus: true %>
  </div>

  <div>
     <%= f.label :phone, 'Telefone' %><br />
     <%= f.text_field :phone, autofocus: true %>
  </div>

  <div>
     <%= f.label :bio, 'Biografia Resumida' %><br />
     <%= f.text_area :bio, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Cadastrar" %>
  </div>
<% end %>

<%= render "candidates/shared/links" %>
