<!-- Bootstrap -->
<div class="well text-center">    
  <h2>Retorno da busca</h2>
  <p>VocÃª buscou por "<%= @query %>" em <%= @item %>
  <% if @jobs || @companies %>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Empresa</th>
          <th scope="col">Vaga</th>
          <th scope="col">Status</th>
          <th scope="col">Link</th>
        </tr>
      </thead>
      <tbody>
        <%if @item == "Empresa"%>
          <% @companies.each do |company| %>
            <% company.job.each do |job| %>
              <% if job.Ativo? && job.expiration >= DateTime.now %> 
                 <tr>             
                  <td><%= job.company.name %>        
                  <td><%= job.title %></td>                  
                  <td><%= job.status %></td> 
                  <td><%= link_to "Ver essa vaga", job, :class => "btn btn-primary" %></td>       
                </tr>
              <% end %>
            <% end %>
          <% end %>          
        <%else%>        
          <% @jobs.each do |job| %>
            <% if job.Ativo? && job.expiration >= DateTime.now %> 
              <tr>             
                <td><%= job.company.name %>        
                <td><%= job.title %></td>                  
                <td><%= job.status %></td> 
                <td><%= link_to "Ver essa vaga", job, :class => "btn btn-primary" %></td>       
              </tr>
            <% end %>
          <% end %>  
        <%end%>
      </tbody>
    </table>
  <% else %>
    <p>A busca retornou vazia</p>
  <% end %>
</div>


