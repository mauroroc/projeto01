<div class="well text-center">    
  <br/><h2>Relação de Vagas com Ofertas</h2><br/>
</div>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Empresa</th>
        <th scope="col">Vaga</th>
        <th scope="col">Candidato</th>
        <th scope="col">Status</th>
        <th scope="col">Link</th>
      </tr>
    </thead>
    <tbody>      
        <% @offers.each do |offer| %>           
          <% if current_employee && offer.job.company == current_employee.company%>    
            <tr>             
              <td><%= offer.job.company.name %>        
              <td><%= offer.job.title %>   
              <td><%= offer.candidate.name %>     
              <td><%= offer.status %></td>
              <td><%= link_to "Ver essa candidatura", jobcandidate_path(offer), :class => "btn btn-primary" %>   
            </tr>            
          <% end %>  
          <% if current_candidate && offer.candidate == current_candidate%>    
            <tr>             
              <td><%= offer.job.company.name %>        
              <td><%= offer.job.title %>   
              <td><%= offer.candidate.name %>     
              <td><%= offer.status %></td>
              <td><%= link_to "Ver essa candidatura", jobcandidate_path(offer), :class => "btn btn-primary" %>   
            </tr>            
          <% end %>      
        <% end %>        
    </tbody>
  </table>
</div>